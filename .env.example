# Secure Password Manager Environment Configuration
# Copy this file to .env and update the values

# Application Settings
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=true

# Security Configuration
# Generate a new secret key for production: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-replace-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///secure_passwords.db
DATABASE_PATH=secure_passwords.db

# Encryption Settings
# Leave these as default unless you have specific requirements
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY_SIZE=32

# Server Configuration
HOST=127.0.0.1
PORT=8080

# Session Configuration
SESSION_PERMANENT=false
PERMANENT_SESSION_LIFETIME=3600

# Security Headers
SECURE_HEADERS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Testing Configuration (only for test environment)
TESTING=false
WTF_CSRF_ENABLED=true

# Production Security Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=false
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=Lax

# SSL Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Database Security (for production)
# DATABASE_POOL_SIZE=10
# DATABASE_POOL_TIMEOUT=30
# DATABASE_POOL_RECYCLE=3600

# Rate Limiting (optional)
# RATELIMIT_ENABLED=true
# RATELIMIT_DEFAULT=100 per hour

# Email Configuration (for password reset features - future enhancement)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Backup Configuration (future enhancement)
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=24
# BACKUP_RETENTION_DAYS=30

# Monitoring and Analytics (optional)
# ANALYTICS_ENABLED=false
# MONITORING_ENABLED=false

# Development Tools
# PROFILER_ENABLED=false
# DEBUG_TOOLBAR_ENABLED=false
